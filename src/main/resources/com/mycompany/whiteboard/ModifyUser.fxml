<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.whiteboard.ModifyUserController">
    <stylesheets>
        <URL value="@styling.css" />
    </stylesheets>
   <children>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="306.0" prefWidth="308.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="usernameLabel" text="Modify user " />
            <TextField fx:id="emailField" focusTraversable="false" promptText="New Email" />
            <TextField fx:id="fullNameField" focusTraversable="false" promptText="New Full Name" />
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="196.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#cancel" styleClass="delete-button" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#confirm" styleClass="confirm-button" text="Confirm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
